<form mothod="poat" asp-action="RegisterSeller" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" placeholder="Phone Number"/>
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="Password" type="password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ConfPassword"></label>
        <input asp-for="ConfPassword" class="form-control" placeholder="Conferm Password" type="password"/>
        <span asp-validation-for="ConfPassword" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
<br />

