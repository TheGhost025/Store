@model List<Product>
@inject IHttpContextAccessor context
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

@if (context.HttpContext.Session.GetInt32("KindUser") == 0)
{
    @section Header {
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <p class="navbar-brand">Welcome @context.HttpContext.Session.GetString("Name")</p>
            <a class="navbar-brand" href="#!">Amazon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Product/Search">Search</a></li>
                </ul>
                <form class="d-flex">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Cart
                        <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </form>
            </div>
        </div>
    </nav>
    }
}
else if (context.HttpContext.Session.GetInt32("KindUser") == 1)
{
    @section Header {
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <p class="navbar-brand">Welcome @context.HttpContext.Session.GetString("Name")</p>
            <a class="navbar-brand" href="#!">Amazon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Product/Search">Search</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Product/MyProducts">My Products</a></li>
                </ul>
            </div>
        </div>
    </nav>
    }
}

<form asp-controller="Product" asp-action="Search">
    <p>
        Name Of Product: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<div class="container">
    <div class="row row-cols-3">
        @foreach(Product p in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="/Image/@p.Image" class="card-img-top" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">Price: @p.Price</p>
                        <a href="/Product/Details/@p.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>