@model List<Product>
@inject IHttpContextAccessor context
@{
    ViewData["Title"] = "MyProducts";
}

@section Header {
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <p class="navbar-brand">Welcome @context.HttpContext.Session.GetString("Name")</p>
            <a class="navbar-brand" href="#!">Amazon</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="/User/HomeStore">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Product/Search">Search</a></li>
                    <li class="nav-item"><a class="nav-link active" href="#">My Products</a></li>
                </ul>
            </div>
        </div>
    </nav>
    }

<a href="/Product/New" class="btn btn-outline-success">New</a>

<br />
<br />

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Quantity</td>
                <td>@p.Price</td>
                <td><a href="/Product/Details/@p.Id" class="btn btn-primary">Details</a></td>
                <td><a href="/Product/Edit/@p.Id" class="btn btn-secondary">Edit</a></td>
            </tr>
        }
    </tbody>
</table>