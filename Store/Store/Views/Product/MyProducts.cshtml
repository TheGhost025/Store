@model List<Product>

@{
    ViewData["Title"] = "MyProducts";
}

<a href="/Product/New" class="btn btn-outline-success">New</a>

<br />
<br />

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Quantity</td>
                <td>@p.Price</td>
                <td><a href="/Product/Details/@p.Id" class="btn btn-primary">Details</a></td>
                <td><a href="/Product/Edit/@p.Id" class="btn btn-secondary">Edit</a></td>
            </tr>
        }
    </tbody>
</table>